mood =  input("Enter your mood: ")
print("You entered " + mood)


if mood == "happy":
    print("It is great to see you happy!")
elif mood == "nervous":
    print("Take a deep breath 3 times.")
elif mood == "relaxed":
    print("I wish I was as chilled as you are.")
elif mood == "excited":
    print("Me too! So exciting!")
elif mood == "good":
    print("Good. That's good!")
elif mood == "sad":
    print("I am sorry :( If someone can manage, you are that one!")
else:
    print("I don't recognize this mood.")
